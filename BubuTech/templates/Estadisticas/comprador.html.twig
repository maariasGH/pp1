{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/estadisticas.css') }}">
{% endblock %}

{% block title %}Estadísticas como Comprador{% endblock %}

{% block body %}
<main class="detalle-container">
    <h2 class="title">Estadísticas como Comprador</h2>

    <p><strong>Cantidad de Subastas Ganadas:</strong> {{ subastasGanadas }}</p>
    <p><strong>Total de Dinero Gastado:</strong> ${{ totalGastado }}</p>

    {% if subastaMasCara == 0 %}
        <p><strong>Todavia no hiciste ofertas!</strong>
    {% else %}
        <p><strong>Subastas Mas Cara Pagada: {{ subastaMasCara }}$</strong>
    {% endif %}

   </p>

    <a class="btn-volver" href="{{ path('ver_estadisticas') }}">Volver al Menú</a>
</main>
{% endblock %}
