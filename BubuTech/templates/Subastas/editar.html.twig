{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/gestion_subastas.css') }}">
{% endblock %}


{% block title %}Editar Subasta{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>Editar Subasta</h2>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'info' ? 'info' : 'success') }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <form action="{{ path('editar_subasta', {id: subasta.id}) }}" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Nombre del Producto</label>
            <input type="text" name="producto_nombre" class="form-control" value="{{ subasta.producto.nombre }}">
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea name="producto_descripcion" class="form-control" rows="4">{{ subasta.producto.descripcion }}</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Imagen (subir solo si querés reemplazar la actual)</label>
            <input type="file" name="producto_imagen" class="form-control">
            {% if subasta.producto.imagen %}
                <small class="text-muted">Imagen actual: {{ subasta.producto.imagen }}</small>
            {% endif %}
        </div>

        <div class="mb-3">
            <label class="form-label">Precio Base</label>
            <input type="number" step="0.01" name="precio_base" class="form-control" value="{{ subasta.precioBase }}">
        </div>

        <div class="mb-3">
            <label class="form-label">Duración (días desde ahora)</label>
            <input type="number" name="duracion" class="form-control" placeholder="ej: 7">
            <small class="text-muted">Si dejás vacío, se mantiene la duración actual.</small>
        </div>

        <div class="mb-3">
            <label class="form-label">Categoría</label>
            <input type="text" name="categoria" class="form-control" value="{{ subasta.categoria }}">
        </div>

        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a href="{{ path('gestionar_subastas') }}" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
{% endblock %}
