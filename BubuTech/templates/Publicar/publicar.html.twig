{% extends 'base.html.twig' %}
    {% block stylesheets %}
        {{ parent() }}    
        <link rel="stylesheet" href="{{ asset('css/publicar.css') }}">
    {% endblock %}      
{% block body %}
    <main class="publicar-subasta-container">
        <h2 class="title">Publicar una Subasta</h2>

        
        {% for message in app.flashes('error') %}
            <div class="flash-error">{{ message }}</div>
        {% endfor %}

        <form action="{{ path('publicar_subasta') }}" method="post" enctype="multipart/form-data">
            <fieldset>
                <legend>Producto</legend>

                <label for="producto_nombre">Nombre del producto:</label>
                <input type="text" id="producto_nombre" name="producto_nombre" required>

                <label for="producto_descripcion">Descripción:</label>
                <textarea id="producto_descripcion" name="producto_descripcion" rows="4" required></textarea>

                <label for="producto_imagen">Imagen:</label>
                <input type="file" id="producto_imagen" name="producto_imagen" accept="image/*" required>
            </fieldset>

            <fieldset>
                <legend>Subasta</legend>

                <label for="precio_base">Precio base:</label>
                <input type="number" id="precio_base" name="precio_base" step="0.01" min="0" required>

                <label for="duracion">Duración (en días):</label>
                <input type="number" id="duracion" name="duracion" min="1" required>

                <label for="categoria">Categoría:</label>
                <select id="categoria" name="categoria" required>
                    <option value="">-- Seleccioná una categoría --</option>
                    <option value="Teclado">Teclado</option>
                    <option value="Mouse">Mouse</option>
                    <option value="Monitor">Monitor</option>
                    <option value="Auriculares">Auriculares</option>
                    <option value="Micrófono">Micrófono</option>
                    <option value="Webcam">Webcam</option>
                    <option value="Joystick">Joystick</option>
                    <option value="Pad">Pad</option>
                    <option value="Graficas">Graficas</option>
                    <option value="Mothers">Mothers</option>
                    <option value="Procesadores">Procesadores</option>
                    <option value="PC´s Armadas">PC´s Armadas</option>
                </select>
            </fieldset>

            <button type="submit">Publicar Subasta</button>
        </form>
    </main>
{% endblock %}