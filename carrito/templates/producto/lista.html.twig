
{% extends 'base.html.twig' %}
    {% block body %} 
        <div class="header">
            <p>Carrito de Compras</p>
            <div style="float: right;">
            <button class="btn-light">Ver Orden</button>
            <button class="btn-light">Salir</button>
            </div>
        </div>
        <main>
            <h2 class="title"> Lista de Productos </h2>
            
            <div class="productos" style="display:flex;gap:20px;flex-wrap: wrap;margin:5px">
            {% for producto in productos %}
                <div class="producto">
                    <img src="{{ producto.imagen }}">
                    <p>{{ producto.nombre }}</p>
                    <p>{{ producto.descripcion }}</p>
                    <div class="boton_precio" style="display:flex;gap:10px">
                        <button style="background-color:black;color:white;border-radius:px solid black">Ver Detalles</button>
                        <p style="font-weight:bold">Precio: {{ producto.precio }}$</p> 
                    </div>
                </div> 
            {% endfor %}
            </div>
        </main>
    {% endblock %}