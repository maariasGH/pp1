{% extends 'base.html.twig' %}

{% block title %}Mi Orden{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <div style="max-width: 900px; margin: 40px auto; background: #fff; padding: 30px; 
                border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">

        <h1 style="text-align:center; color:#333; margin-bottom:30px;">🛒 Mi Orden</h1>

        {% if orden.item|length == 0 %}
            <p style="text-align:center; font-size:18px; color:#666;">Tu carrito está vacío 😕</p>
            <div style="text-align:center; margin-top:20px;">
                <a href="{{ path('listar_productos') }}" 
                   style="background-color:#111; color:white; padding:10px 20px; 
                          border-radius:6px; text-decoration:none; font-weight:bold; transition:0.3s;">
                    🛍️ Ir a comprar productos
                </a>
            </div>
        {% else %}
            <table style="width:100%; border-collapse:collapse; text-align:center;">
                <thead>
                    <tr style="background-color:#f4f4f4; border-bottom:2px solid #ddd;">
                        <th style="padding:12px; color:#333;">Producto</th>
                        <th style="padding:12px; color:#333;">Cantidad</th>
                        <th style="padding:12px; color:#333;">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in orden.item %}
                        <tr style="border-bottom:1px solid #eee;">
                            <td style="padding:15px; font-size:16px; color:#444;">{{ item.producto.nombre }}</td>
                            <td style="padding:15px; font-size:16px;">{{ item.cantidad }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div style="display:flex; justify-content:space-between; margin-top:30px;">
                <a href="{{ path('listar_productos') }}" 
                   style="background-color:#111; color:white; padding:10px 20px; 
                          border-radius:6px; text-decoration:none; font-weight:bold; transition:0.3s;">
                    🛍️ Seguir comprando
                </a>

            </div>
        {% endif %}
    </div>
{% endblock %}

